<header>
    <a href="<%= userLogIn ? '/debtsList' : '/' %>" class="aLogoContainer">
        <div class="logo" style="background-image: url('/assets/logo.png');"></div>
        <p>Defaulter Group</p>
    </a>
    <nav class="navMenu">
        <% if(userLogIn) { %>
            <li><a href="/debtsList">Debts List</a></li>
            <li><a href="/users/logOut">Log Out</a></li>
        <% } else { %>
            <li><a href="/">Home</a></li>
            <li><a href="/users/signIn">Sign In</a></li>
            <li><a href="/users/signUp">Sign Up</a></li>
        <% } %>
    </nav>
    <% if (userPhoto) { %>
        <div class="userPhoto" style="background-image: url('<%= userPhoto %>');"></div>
    <% } else { %>
        <div class="userPhoto">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
            </svg>
        </div>
    <% } %>
</header>