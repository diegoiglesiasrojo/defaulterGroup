<%- include("partials/head") %>
<%- include("partials/header") %>

<main class="mainSignIn">
    <form action="/users/signIn" method="POST">
        <input type="email" name="mail" placeholder="mail" required value="<%= !userData ? '' : userData.mail %>">
        <input type="password" name="password" placeholder="password" required value="<%= !userData ? '' : userData.password %>">
        <p style="opacity: <%= error ? '1' : '0' %> ;"><%= error ? error : 'error' %></p>
        <input type="submit" value="Sign In">
    </form>
    <a href="/users/signUp">You don't have an account yet? Sign Up!</a>
</main>

<%- include("partials/footer") %>